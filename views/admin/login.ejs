<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- <div id="particles-js" class="snow"></div> -->
  <input type="text" id="message" value="<%= typeof message !== 'undefined' ? message : '' %>" name="message" hidden>

  <main>
    <div class="left-side"></div>
    
    <div class="right-side">
      <form method="post" action="/admin/login">
        <div class="btn-group">
          <button class="btn">
            <img class="logo" src="https://github.com/ecemgo/mini-samples-great-tricks/assets/13468728/d1c98974-c62d-4071-8bd2-ab859fc5f4e9" alt="" />
            <span>Sign in with Google</span>
          </button>
          <button class="btn">
            <img class="logo" src="https://github.com/ecemgo/mini-samples-great-tricks/assets/13468728/59c1561b-8152-4d05-b617-0680a7629a0e" alt="" />
            <span>Sign in with Apple</span>
          </button>
        </div>

        <div class="or">OR</div>

        <label for="email">Email</label>
        <input type="text" id="email" placeholder="Enter Email" name="email" required />

        <label for="password">Password</label>
        <input type="password" id="password" placeholder="Enter Password" name="password" required />

        <button type="submit" class="login-btn">Sign in</button>
        <div class="links">
          <a href="#">Forgot password?</a>
          <a href="#">Do not have an account?</a>
        </div>
      </form>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Fetch the message value after DOM is fully loaded
      const message = document.getElementById('message').value;
    
      if (message) {
        Swal.fire(message);
      }
    
      // Attach form validation event listener
      document.querySelector('form').addEventListener('submit', formValidate);
    });
    
    function formValidate(e) {
      var email = document.getElementById('email').value;
      var password = document.getElementById('password').value;
    
      if (email === "" || password === "") {
        e.preventDefault(); // Prevent form submission if validation fails
        Swal.fire("All fields are required");
        return false;
      }
    
      // If validation passes, allow form submission
      return true;
    }
  </script>
</body>
</html>
